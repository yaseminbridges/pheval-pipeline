params {
  //----------------------------------------------------------------------
  // Output & pipeline directory structure
  // Users should change these if they want a different layout.
  //----------------------------------------------------------------------
  configurations_dir = "${projectDir}/configurations"
  corpora_dir        = "${projectDir}/corpora"
  results_dir        = "${projectDir}/results"
  benchmark_dir      = "${projectDir}/benchmark"

  //----------------------------------------------------------------------
  // Tool-specific shared resources
  // Only relevant for tools that need them (e.g., Exomiser).
  // New tools may add additional fields here if needed.
  //----------------------------------------------------------------------
  exomiser_data_dir        = "/data/WHRI-Phenogenomics/resources/exomiser/data"
  exomiser_distribution_dir = "/data/scratch/bty201/pheval-pipeline"

  //----------------------------------------------------------------------
  // TOOL DEFINITIONS
  //
  // This is the MOST important block for implementing new tools.
  //
  // Each entry corresponds to *one configuration* of a tool.
  //
  // REQUIRED FIELDS for every tool:
  //   - config_id        : unique identifier (used in output paths)
  //   - tool             : tool name (must match your filtering in main.nf)
  //   - version          : tool version string
  //   - config_template  : path to the tool_config_template.yml file
  //
  // OPTIONAL FIELDS:
  //   Any tool-specific arguments used inside toolPrepareConfigurations.nf
  //
  // To add a new tool:
  //   1. Create modules/tools/<tool_name>/...
  //   2. Add a new block inside params.tools[]
  //   3. Include its prepare + runner pipeline in main.nf
  //----------------------------------------------------------------------
  tools = [
    [
      config_id        : "exomiser-14.1.0/2508_all",
      tool             : "exomiser",
      version          : "14.1.0",
      phenotype_db     : "2508",
      hg19_db          : "2508",
      hg38_db          : "2508",
      exomiser_analysis: "preset-exome-analysis.yml",
      config_template  : "${projectDir}/modules/tools/exomiser/exomiser_config_template.yml"
    ],
    [
      config_id        : "exomiser-14.1.0/2508_human_only",
      tool             : "exomiser",
      version          : "14.1.0",
      phenotype_db     : "2508",
      hg19_db          : "2508",
      hg38_db          : "2508",
      exomiser_analysis: "preset-exome-analysis_human_only.yml",
      config_template  : "${projectDir}/modules/tools/exomiser/exomiser_config_template.yml"
    ],
    [
      config_id        : "gado",
      tool             : "gado",
      version          : "1.0.0",
      config_template  : "${projectDir}/modules/tools/gado/gado_config_template.yml",
      gado_command_line: "https://github.com/molgenis/systemsgenetics/releases/download/GADO_1.0.4/GadoCommandline-1.0.4.tar.gz",
      prediction_matrix: "https://molgenis26.gcc.rug.nl/downloads/genenetwork/v2.1/genenetwork_bonf_spiked.zip",
      prediction_info  : "https://molgenis26.gcc.rug.nl/downloads/genenetwork/v2.1/predictions_auc_bonf.txt",
      genes            : "https://molgenis26.gcc.rug.nl/downloads/genenetwork/v2.1/hpo_prediction_genes.txt",
      hpo_ontology     : "https://github.com/obophenotype/human-phenotype-ontology/releases/download/v2024-12-12/hp.obo"
    ]
  ]

  //----------------------------------------------------------------------
  // CORPORA DEFINITIONS
  //
  // Each entry here defines one evaluation corpus.
  // The pipeline will run *every tool configuration against every corpus*.
  //
  // Users can add/remove corpora here. Tools should not modify this.
  //----------------------------------------------------------------------
  corpora_configs = [
      [
          corpora_id: "LIRICAL",
          phenopacket_directory: "/data/scratch/bty201/corpora/phenopackets",
          vcf_directory: "/data/scratch/bty201/corpora/vcf",
          ],
      [
          corpora_id: "TEST",
          phenopacket_directory: "/data/scratch/bty201/corpora/phenopackets_2",
          vcf_directory: "/data/scratch/bty201/corpora/vcf_2",
          ]
  ]
}


profiles {
  local {
    includeConfig 'conf/local.config'
  }
  hpc {
    includeConfig 'conf/hpc.config'
  }
}